<%= form_for @user, url: users_path(@user) do |f| %>
    <%= f.label :username, 'Your username: ' %>
    <%= f.text_field :username, placeholder: "Your username here" %>
    <br>
    <%= f.label :email, 'Your email: ' %>
    <%= f.text_field :email, placeholder: "example@email.com" %>
    <br>
    <%= f.label :password, 'Your password: ' %>
    <%= f.password_field :password %>
    <br>
    <%= f.submit "Create" %>
<% end %>



